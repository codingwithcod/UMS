<% include("../layouts/header.ejs") %> 

<img src="userImages/<%=user.image %> " width="100px" height="100px" alt="<%=user.image %>">


<form action="/edit" method="post" enctype="multipart/form-data">

<input type="file" name="image">
<input type="hidden" name="user_id" value="<%= user._id %>">
<br><br>
<input type="text" name="name" value="<%= user.name %>" placeholder="Enter Your Name">
<br><br>
<input type="email" name="email" value="<%= user.email %>" placeholder="Enter Your Email">
<br><br>
<input type="number" name="mobile" value="<%= user.mobile %>" placeholder="Enter Your Mobile">
<br><br>
<input type="submit" value="Update Profile">
</form>

