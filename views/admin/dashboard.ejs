<% include('../layouts/header.ejs') %> 

<h1>Dashboard</h1>

<a href="/admin/new-user">Add New User</a>
<br><br>

<table style="width: 80%;">

    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Image</th>
        <th>Verified</th>
        <th>Action</th>
    </tr>
    <% 
    if (users.length > 0) {
        for (let i = 0; i<users.length; i++) {
            
            %>
            <tr>
                <td> <%= users[i].name %></td>    
                <td> <%= users[i].email %></td>    
                <td> <%= users[i].mobile %></td>   
                <td><img src="/userImages/<%= users[i].image %>" alt="<%= users[i].image %>" width="50px" height="50px"></td> 
                
                    <%
                        if (users[i].is_verified === 0) {
                            %>
                            <td>No</td>
                            <%
                        }else{
                            %>
                            <td>Yes</td>
                            <%
                        }
                    
                    %>
                  <td><a href="/admin/edit-user?id=<%= users[i]._id %>">Edit</a></td>      
                  <td><a href="/admin/delete-user?id=<%= users[i]._id %>">Delete</a></td>      
            </tr>
            
            <%
        }



    } else {
        %>
         <tr>
            <td colspan="5"> User Not Founds</td>
            </tr>
        <%
    }
    
    %> 

</table>
<br><br>
<a href="/admin/home">Go to Home</a>




