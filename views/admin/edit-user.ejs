<% include("../layouts/header.ejs") %> 

<h1>Edit User </h1>



<form action="" method="post">

    <input type="text" name="name" placeholder="Enter your Name" value="<%= user.name %>" required>
    <br><br>
    <input type="email" name="email" placeholder="Enter your Email" value="<%= user.email %>" required>
    <br><br>
    <input type="number " name="mobile" placeholder="Enter your Mobile" value="<%= user.mobile %>" required>
    <br><br>
    <label for="">Verified</label>
    <input type="radio" name="verify" value="1" <% if(user.is_verified == 1){%> checked <%} %> >
    <label for="">Unverified</label>
    <input type="radio" name="verify" value="0" <% if(user.is_verified == 0){%> checked <%} %> >
    <br><br>
    <input type="hidden" name="id" value="<%= user._id %>">
    <input type="submit" value="Update User" >
    <br><br>
</form>

<a href="/admin/dashboard">Go to Dashboard</a>



